{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@spartan-ng/ui-input-helm": [
        "./lib/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-button-helm": [
        "./lib/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./lib/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-avatar-helm": [
        "./lib/ui/ui-avatar-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./lib/ui/ui-label-helm-custom/src/index.ts"
      ],
      "@spartan-ng/ui-badge-helm": [
        "./lib/ui/ui-badge-helm/src/index.ts"
      ],
      "@spartan-ng/ui-checkbox-helm": [
        "./lib/ui/ui-checkbox-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [
        "./lib/ui/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/ui-dialog-helm": [
        "./lib/ui/ui-dialog-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./lib/ui/ui-spinner-helm/src/index.ts"
      ],
      "@spartan-ng/ui-command-helm": [
        "./lib/ui/ui-command-helm/src/index.ts"
      ],
      "@spartan-ng/ui-popover-helm": [
        "./lib/ui/ui-popover-helm/src/index.ts"
      ],
      "@spartan-ng/ui-toggle-helm": [
        "./lib/ui/ui-toggle-helm/src/index.ts"
      ],
      "@spartan-ng/ui-radiogroup-helm": [
        "./lib/ui/ui-radiogroup-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
